<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:id="@+id/PostUserImage"-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:src="@drawable/image4"-->
<!--                android:padding="5dp"-->
<!--                android:layout_below="@+id/app_bar_layout"/>-->

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/black"
                android:layout_marginVertical="@dimen/activity_horizontal_margin"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/PostImageView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/image6"
            android:scaleType="fitXY"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">

            <ImageButton
                android:id="@+id/post_image_like_btn5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_icons8_heart_24"
                android:background="@color/white"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/likess3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="Look professional with your own high-quality logo. Get dozens of logo files presized for social media, your own Premium website and much more..Look professional with your own high-quality logo. Get dozens of logo files presized for social media, your own Premium website and much more."/>

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"

            />

    </LinearLayout>
</LinearLayout>
</layout>